{{#each links}}
    <div class="modal fade imagen-modal-{{imagen}}"  style="z-index: 20000;" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="background: #f0f0f0;">     
                <button type="button" class=" position-absolute btn btn-secondary m-3" style="z-index: 15000;" data-dismiss="modal">X</button>
                <div class="col-lg-8 col-12 mx-auto">
                    <img src="/images/{{imagen}}" style="width:100%;">
                </div>
            </div>
        </div>
    </div>
{{/each}}


<div class="modal fade bd-example-modal-lg"  style="z-index:3500;" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title text-dark text-center col-6 mx-auto" id="exampleModalLabel" style="font-family: Bebas Neue, cursive;">Su factura</i></h4>
      </div>
      <div class="modal-body pt-0">
        <div class="row mt-0">
          <div class="col-12 mx-auto">
            <div class="row mt-0 border-bottom">
                <div class="col-5 mt-0">
                    <p class="mt-3" style="font-family: Bebas Neue, cursive;">Producto</p>
                </div>
                <div class="col-2 border-left"><p class="mt-3" style="font-family: Bebas Neue, cursive;">Precio</p></div>
                <div class="col-2 border-left"><p class="mt-3" style="font-family: Bebas Neue, cursive;">Cantidad</p></div>
                <div class="col-1 border-left">

                </div>
            </div>
            {{#each cart}}
                <form class="row border-bottom" action="/cart/uploads/{{id}}" method="POST">
                    <div class="col-2 p-2">
                        <img src="/images/{{imagen}}" style="width: 100%;">
                    </div>
                    <div class="col-3 my-auto">
                        <p style="font-family: Bebas Neue, cursive;">{{producto}}</p>
                    </div>
                    <div class="col-2 my-auto" style="font-family: Bebas Neue, cursive;">
                        ${{precio}}
                    </div>
                    <div class="col-2 my-auto" style="font-family: Bebas Neue, cursive;">
                        <input type="number" name="cantidad" value="{{cantidad}}" class="form-control">
                    </div>
                    <div class="col-1 my-auto" style="font-family: Bebas Neue, cursive;">
                        <a class="btn btn-danger p-3" href="/cart/delete/{{id}}"><i class="fa fa-trash"></i></a>            
                    </div>
                    <div class="col-1 my-auto" style="font-family: Bebas Neue, cursive;">
                        <button class="btn btn-success"><i class="fa fa-redo text-white"></i></button>           
                    </div>
                    <div class="col-1 my-auto" style="font-family: Bebas Neue, cursive;">
                        <input class="d-none" name="">            
                    </div>
                </form>
            {{/each}}
            <div class="row">
                <div class="col-6 offset-6">
                    <div class="row mt-3">
                        <div class="col-2 offset-8">
                            <h4 style="font-family: Bebas Neue, cursive;">TOTAL:</h4>
                        </div>
                        <div class="col-2">                            
                            <h3 style="font-family: Bebas Neue, cursive;">${{costo}}</h3>
                        </div>
                    </div>
                </div>
            </div>
          </div>  
        </div>
      </div>
      <div class="modal-footer">        
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar Carrito</button>
        <a type="button" class="btn btn-primary text-white" href="/buy/{{costo}}">Procesar Pago</a>
      </div>
    </form>
  </div>
  </div>
</div>
